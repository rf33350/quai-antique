{% extends 'base.html.twig' %}

{% block content %}
    <div class="text-center">
        <h1>Notre carte</h1>
    </div>

    <div class="mx-2">

        <h2>Entrées</h2>
        <br>
        {% for entree in entrees %}
                <div class="d-flex justify-content-between">
                    <h5>{{ entree.title }}</h5>
                    <p>{{ entree.price }}€</p>
                </div>
        {% endfor %}
        <br>
        <br>
        <h2>Plats</h2>
        <br>
        {% for plat in plats %}
            <div class="d-flex justify-content-between">
                <h5>{{ plat.title }}</h5>
                <p>{{ plat.price }}€</p>
            </div>
        {% endfor %}
        <br>
        <br>
        <h2>Desserts</h2>
        <br>
        {% for dessert in desserts %}
            <div class="d-flex justify-content-between">
                <h5>{{ dessert.title }}</h5>
                <p>{{ dessert.price }}€</p>
            </div>
        {% endfor %}
        <br>
    </div>
{% endblock %}
